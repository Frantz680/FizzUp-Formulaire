                                                            <i class="fa fa-times-circle"></i> {{ error.message }}
                                                        </label>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                    {{ form_widget(form.email) }}
                                    <small>{{ form_help(form.email) }}</small>
                                </div>

                                    <div class="form-group col-lg-12">
                                        {{ form_label(form.commentaire) }}
                                        <div class="form-error">
                                            {% if form.commentaire.vars.errors|length > 0 %}
                                                <ul class="list-unstyled">
                                                    {% for error in form.commentaire.vars.errors %}
                                                        <li class="text-danger">
                                                            <label class="control-label" for="inputError">
                                                                <i class="fa fa-times-circle"></i> {{ error.message }}
                                                            </label>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </div>
                                        {{ form_widget(form.commentaire) }}
                                        <small>{{ form_help(form.commentaire) }}</small>
                                    </div>

                                    <div class="form-group col-lg-12">
                                        {{ form_label(form.picture) }}
                                        <div class="form-error">
                                            {% if form.picture.vars.errors|length > 0 %}
                                                <ul class="list-unstyled">
                                                    {% for error in form.picture.vars.errors %}
                                                        <li class="text-danger">
                                                            <label class="control-label" for="inputError">
                                                                <i class="fa fa-times-circle"></i> {{ error.message }}
                                                            </label>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </div>
                                        {{ form_widget(form.picture) }}
                                        <small>{{ form_help(form.picture) }}</small>
                                    </div>

                            </div>
                        </div>
                    </div>

