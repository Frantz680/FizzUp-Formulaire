{% extends 'base.html.twig' %}

{% block title %}Formulaire{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block contenu %}
    <div class="formulaire">
        <div class="formulaire-contour">

            {{ form_start(form, {'method': 'POST', 'attr': {'novalidate': 'novalidate'}}) }}

            <div class="row">
                <div class="col-lg-12">
                    <div class="box box-primary">

                        <div class="box-header with-border">
                            <h1 class="box-title text-center">Votre avis compte !</h1>
                        </div>

                        <div class="box-body">

                            <div class="col-lg-12">

                                <div class="form-group col-lg-12">
                                    {{ form_label(form.product) }}
                                    <div class="form-error">
                                        {% if form.product.vars.errors|length > 0 %}
                                            <ul class="list-unstyled">
                                                {% for error in form.product.vars.errors %}
                                                    <li class="text-danger">
                                                        <label class="control-label" for="inputError">
                                                            <i class="fa fa-times-circle"></i> {{ error.message }}
                                                        </label>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    </div>
                                    {{ form_widget(form.product) }}
                                    <small>{{ form_help(form.product) }}</small>
                                </div>

                                <div class="form-group col-lg-12">
                                    {{ form_label(form.pseudo) }}
